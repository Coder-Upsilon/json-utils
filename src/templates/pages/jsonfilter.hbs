<main class="main-content">
    <div class="jsonpath-layout">
            <div class="main-panel">
                <div class="input-section">
                    <div class="input-group">
                        <label for="jsonFilterInput">{{t "jsonfilter.jsonData"}}</label>
                        <div class="input-container">
                            <div class="floating-buttons input-floating-buttons">
                                <button id="clearFilterInputBtn" class="btn-icon" title="{{t "jsonfilter.clearInput"}}">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                            <textarea id="jsonFilterInput" placeholder='Enter your JSON data here, e.g.:
{
  "store": {
    "book": [
      {
        "category": "reference",
        "author": "Nigel Rees",
        "title": "Sayings of the Century",
        "price": 8.95
      },
      {
        "category": "fiction",
        "author": "Evelyn Waugh",
        "title": "Sword of Honour",
        "price": 12.99
      }
    ]
  }
}'></textarea>
                        </div>
                    </div>

                    <div class="filter-section">
                        <div class="input-group">
                            <label for="jsonpath-input">{{t "jsonfilter.jsonPathExpression"}}</label>
                            <div class="jsonpath-input-container">
                                <input type="text" id="jsonpath-input" placeholder="{{t "jsonfilter.jsonPathPlaceholder"}}" />
                                <button id="drawer-trigger" class="drawer-trigger" title="{{t "jsonfilter.openGuide"}}">
                                    <i class="fas fa-question-circle"></i>
                                    <span>{{t "jsonfilter.jsonPathGuide"}}</span>
                                </button>
                            </div>
                        </div>

                        <div class="button-group">
                            <button id="filterBtn" class="btn btn-primary">{{t "jsonfilter.filterJson"}}</button>
                            <button id="clearFilterBtn" class="btn btn-secondary">{{t "jsonfilter.clear"}}</button>
                            <button id="loadFilterSampleBtn" class="btn btn-outline">{{t "jsonfilter.loadExample"}}</button>
                        </div>
                    </div>
                </div>

                <div class="output-section">
                    <div class="output-group">
                        <label for="filtered-output">{{t "jsonfilter.filteredResult"}}</label>
                        <div class="output-container">
                            <div class="floating-buttons">
                                <button id="copyFilterBtn" class="btn-icon" title="{{t "jsonfilter.copyOutput"}}">
                                    <i class="fas fa-copy"></i>
                                </button>
                                <button id="downloadFilterBtn" class="btn-icon" title="{{t "jsonfilter.downloadOutput"}}">
                                    <i class="fas fa-download"></i>
                                </button>
                            </div>
                            <textarea id="jsonFilterOutput" readonly placeholder="{{t "jsonfilter.filteredPlaceholder"}}"></textarea>
                        </div>
                    </div>

                    <div class="result-info">
                        <div id="result-count" class="info-item"></div>
                        <div id="result-type" class="info-item"></div>
                    </div>
                </div>
            </div>

            <div class="help-panel hidden">
                <div class="help-header">
                    <h3>{{t "jsonfilter.guide.title"}}</h3>
                    <button id="toggle-help" class="help-toggle">Ã—</button>
                </div>
                
                <div class="help-content">
                    <div class="help-section">
                        <h4>{{t "jsonfilter.guide.basicSyntax"}}</h4>
                        <div class="syntax-list">
                            <div class="syntax-item">
                                <code>$</code>
                                <span>{{t "jsonfilter.guide.syntax.root"}}</span>
                            </div>
                            <div class="syntax-item">
                                <code>@</code>
                                <span>{{t "jsonfilter.guide.syntax.current"}}</span>
                            </div>
                            <div class="syntax-item">
                                <code>.</code>
                                <span>{{t "jsonfilter.guide.syntax.child"}}</span>
                            </div>
                            <div class="syntax-item">
                                <code>..</code>
                                <span>{{t "jsonfilter.guide.syntax.recursive"}}</span>
                            </div>
                            <div class="syntax-item">
                                <code>*</code>
                                <span>{{t "jsonfilter.guide.syntax.wildcard"}}</span>
                            </div>
                            <div class="syntax-item">
                                <code>[]</code>
                                <span>{{t "jsonfilter.guide.syntax.subscript"}}</span>
                            </div>
                            <div class="syntax-item">
                                <code>[,]</code>
                                <span>{{t "jsonfilter.guide.syntax.union"}}</span>
                            </div>
                            <div class="syntax-item">
                                <code>[start:end]</code>
                                <span>{{t "jsonfilter.guide.syntax.slice"}}</span>
                            </div>
                            <div class="syntax-item">
                                <code>[?()]</code>
                                <span>{{t "jsonfilter.guide.syntax.filter"}}</span>
                            </div>
                        </div>
                    </div>

                    <div class="help-section">
                        <h4>{{t "jsonfilter.guide.commonExamples"}}</h4>
                        <div class="examples-list">
                            <div class="example-item" data-expression="$">
                                <code>$</code>
                                <span>{{t "jsonfilter.guide.examples.rootObject"}}</span>
                            </div>
                            <div class="example-item" data-expression="$.store.book[*]">
                                <code>$.store.book[*]</code>
                                <span>{{t "jsonfilter.guide.examples.allBooks"}}</span>
                            </div>
                            <div class="example-item" data-expression="$.store.book[0]">
                                <code>$.store.book[0]</code>
                                <span>{{t "jsonfilter.guide.examples.firstBook"}}</span>
                            </div>
                            <div class="example-item" data-expression="$.store.book[-1]">
                                <code>$.store.book[-1]</code>
                                <span>{{t "jsonfilter.guide.examples.lastBook"}}</span>
                            </div>
                            <div class="example-item" data-expression="$.store.book[0:2]">
                                <code>$.store.book[0:2]</code>
                                <span>{{t "jsonfilter.guide.examples.firstTwo"}}</span>
                            </div>
                            <div class="example-item" data-expression="$.store.book[*].title">
                                <code>$.store.book[*].title</code>
                                <span>{{t "jsonfilter.guide.examples.allTitles"}}</span>
                            </div>
                            <div class="example-item" data-expression="$.store.book[*].author">
                                <code>$.store.book[*].author</code>
                                <span>{{t "jsonfilter.guide.examples.allAuthors"}}</span>
                            </div>
                            <div class="example-item" data-expression="$.store.book[?(@.price &lt; 10)]">
                                <code>$.store.book[?(@.price &lt; 10)]</code>
                                <span>{{t "jsonfilter.guide.examples.booksUnder10"}}</span>
                            </div>
                            <div class="example-item" data-expression="$.store.book[?(@.price &gt; 10)]">
                                <code>$.store.book[?(@.price &gt; 10)]</code>
                                <span>{{t "jsonfilter.guide.examples.booksOver10"}}</span>
                            </div>
                            <div class="example-item" data-expression="$.store.book[?(@.category == 'fiction')]">
                                <code>$.store.book[?(@.category == 'fiction')]</code>
                                <span>{{t "jsonfilter.guide.examples.fictionOnly"}}</span>
                            </div>
                            <div class="example-item" data-expression="$..author">
                                <code>$..author</code>
                                <span>{{t "jsonfilter.guide.examples.allAuthorsRecursive"}}</span>
                            </div>
                            <div class="example-item" data-expression="$.store..price">
                                <code>$.store..price</code>
                                <span>{{t "jsonfilter.guide.examples.allPrices"}}</span>
                            </div>
                            <div class="example-item" data-expression="$.store.book[0,1]">
                                <code>$.store.book[0,1]</code>
                                <span>{{t "jsonfilter.guide.examples.firstSecond"}}</span>
                            </div>
                            <div class="example-item" data-expression="$.store.*">
                                <code>$.store.*</code>
                                <span>{{t "jsonfilter.guide.examples.allChildren"}}</span>
                            </div>
                        </div>
                    </div>

                    <div class="help-section">
                        <h4>{{t "jsonfilter.guide.filterOperators"}}</h4>
                        <div class="operators-list">
                            <div class="operator-item">
                                <code>==</code>
                                <span>{{t "jsonfilter.guide.operators.equal"}}</span>
                            </div>
                            <div class="operator-item">
                                <code>!=</code>
                                <span>{{t "jsonfilter.guide.operators.notEqual"}}</span>
                            </div>
                            <div class="operator-item">
                                <code>&lt;</code>
                                <span>{{t "jsonfilter.guide.operators.lessThan"}}</span>
                            </div>
                            <div class="operator-item">
                                <code>&lt;=</code>
                                <span>{{t "jsonfilter.guide.operators.lessEqual"}}</span>
                            </div>
                            <div class="operator-item">
                                <code>&gt;</code>
                                <span>{{t "jsonfilter.guide.operators.greaterThan"}}</span>
                            </div>
                            <div class="operator-item">
                                <code>&gt;=</code>
                                <span>{{t "jsonfilter.guide.operators.greaterEqual"}}</span>
                            </div>
                            <div class="operator-item">
                                <code>=~</code>
                                <span>{{t "jsonfilter.guide.operators.regex"}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
