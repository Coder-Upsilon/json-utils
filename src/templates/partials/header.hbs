<header class="header">
    <div class="header-content">
        <div class="header-text">
            <img src="{{#if langPath}}../{{/if}}assets/logo.svg" alt="JSON Utils Logo" class="logo">
            <div class="header-title-group">
                <h1>JSON Utils</h1>
                <p>{{headerSubtitle}}</p>
            </div>
        </div>
        <div class="header-right">
            <nav class="header-nav">
                <a href="{{#if langPath}}/{{langPath}}{{else}}/{{/if}}index.html" class="nav-link{{#if isHome}} active{{/if}}">
                    {{t "nav.home"}}
                </a>
                <a href="{{#if langPath}}/{{langPath}}{{else}}/{{/if}}jsonfilter.html" class="nav-link{{#if isJsonFilter}} active{{/if}}">
                    {{t "nav.jsonFilter"}}
                </a>
                <a href="{{#if langPath}}/{{langPath}}{{else}}/{{/if}}formatconvert.html" class="nav-link{{#if isFormatConvert}} active{{/if}}">
                    {{t "nav.formatConvert"}}
                </a>
                <a href="{{#if langPath}}/{{langPath}}{{else}}/{{/if}}schema.html" class="nav-link{{#if isSchema}} active{{/if}}">
                    {{t "nav.schema"}}
                </a>
                <a href="{{#if langPath}}/{{langPath}}{{else}}/{{/if}}about.html" class="nav-link{{#if isAbout}} active{{/if}}">
                    {{t "nav.about"}}
                </a>
            </nav>
                    <div class="header-config-row">
                        {{#unless isAbout}}
                        <label class="config-toggle-compact" title="{{t "config.shareAcrossPages"}}">
                            <i class="fas fa-database config-toggle-icon"></i>
                            <input type="checkbox" id="shareAcrossPagesToggle" checked>
                            <span class="config-toggle-slider-compact"></span>
                            <span class="config-toggle-label">Sync input</span>
                        </label>
                        {{/unless}}
                        <select class="language-dropdown-select" onchange="window.location.href=this.value">
                            {{#ifEqual currentLang "en"}}
                            <option value="/{{#if isJsonFilter}}jsonfilter{{else}}{{#if isFormatConvert}}formatconvert{{else}}{{#if isAbout}}about{{else}}index{{/if}}{{/if}}{{/if}}.html" selected>EN</option>
                            <option value="/cn/{{#if isJsonFilter}}jsonfilter{{else}}{{#if isFormatConvert}}formatconvert{{else}}{{#if isAbout}}about{{else}}index{{/if}}{{/if}}{{/if}}.html">中文</option>
                            {{else}}
                            <option value="/{{#if isJsonFilter}}jsonfilter{{else}}{{#if isFormatConvert}}formatconvert{{else}}{{#if isAbout}}about{{else}}index{{/if}}{{/if}}{{/if}}.html">EN</option>
                            <option value="/cn/{{#if isJsonFilter}}jsonfilter{{else}}{{#if isFormatConvert}}formatconvert{{else}}{{#if isAbout}}about{{else}}index{{/if}}{{/if}}{{/if}}.html" selected>中文</option>
                            {{/ifEqual}}
                        </select>
                    </div>
        </div>
    </div>
</header>
