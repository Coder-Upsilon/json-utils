<div class="controls-section">

    <div class="control-group-section">
        <div class="control-group-header">
            <i class="fas fa-file-export"></i>
            <span>Format Conversion</span>
        </div>
        <div class="control-group">
            <button id="toYamlBtn" class="btn btn-small btn-primary">
                <i class="fas fa-file-code"></i>
                To YAML
            </button>
            <button id="toXmlBtn" class="btn btn-small btn-primary">
                <i class="fas fa-code"></i>
                To XML
            </button>
        </div>
    </div>

    <div class="control-group-section">
        <div class="control-group-header">
            <i class="fas fa-play"></i>
            <span>Quick Start</span>
        </div>
        <div class="control-group">
            <button id="loadSampleBtn" class="btn btn-small btn-secondary">
                <i class="fas fa-file-import"></i>
                Load Sample
            </button>
        </div>
    </div>
</div>

<div class="editor-section">
    <div class="input-panel">
        <div class="panel-header">
            <div class="panel-title-group">
                <h3>Input JSON</h3>
                <label class="parse-string-toggle">
                    <input type="checkbox" id="parseStringToggle">
                    <span class="toggle-slider"></span>
                    <span class="toggle-label">Parse String</span>
                </label>
            </div>
            <div id="inputStatus" class="status-inline"></div>
        </div>
        <div class="input-container">
            <div class="floating-buttons input-floating-buttons">
                <button id="clearBtn" class="btn-icon" title="Clear input area">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
            <textarea id="jsonInput" placeholder="Paste your JSON here..."></textarea>
        </div>
    </div>

    <div class="output-panel">
        <div class="panel-header">
            <div class="panel-title-group">
                <h3>Output</h3>
                <div class="output-format-controls">
                    <label class="format-radio">
                        <input type="radio" name="outputFormat" value="pretty" checked>
                        <span>Pretty</span>
                    </label>
                    <label class="format-radio">
                        <input type="radio" name="outputFormat" value="minify">
                        <span>Minify</span>
                    </label>
                    <label class="format-radio">
                        <input type="radio" name="outputFormat" value="stringify">
                        <span>Stringify</span>
                    </label>
                </div>
            </div>
            <div id="outputStatus" class="status-inline"></div>
        </div>
        <div class="output-container">
            <div class="floating-buttons">
                <button id="copyToInputBtn" class="btn-icon" title="Copy output back to input for further processing">
                    <i class="fas fa-arrow-left"></i>
                </button>
                <button id="copyBtn" class="btn-icon" title="Copy output to clipboard">
                    <i class="fas fa-copy"></i>
                </button>
                <button id="downloadBtn" class="btn-icon" title="Download output as file">
                    <i class="fas fa-download"></i>
                </button>
            </div>
            <textarea id="output" readonly></textarea>
        </div>
    </div>
</div>
