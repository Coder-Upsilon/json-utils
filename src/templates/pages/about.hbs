<section class="content-section">
    <h2>{{t "about.title"}}</h2>
    <p>{{t "about.intro"}}</p>
</section>

<section class="content-section">
    <h2>{{t "about.keyFeatures"}}</h2>
    <div class="features-grid">
        <div class="feature-card">
            <i class="fas fa-code feature-icon"></i>
            <h3>{{t "about.features.prettyPrint.title"}}</h3>
            <p>{{t "about.features.prettyPrint.description"}}</p>
        </div>
        <div class="feature-card">
            <i class="fas fa-check-circle feature-icon"></i>
            <h3>{{t "about.features.validation.title"}}</h3>
            <p>{{t "about.features.validation.description"}}</p>
        </div>
        <div class="feature-card">
            <i class="fas fa-filter feature-icon"></i>
            <h3>{{t "about.features.filter.title"}}</h3>
            <p>{{t "about.features.filter.description"}}</p>
        </div>
        <div class="feature-card">
            <i class="fas fa-exchange-alt feature-icon"></i>
            <h3>{{t "about.features.conversion.title"}}</h3>
            <p>{{t "about.features.conversion.description"}}</p>
        </div>
        <div class="feature-card">
            <i class="fas fa-wrench feature-icon"></i>
            <h3>{{t "about.features.repair.title"}}</h3>
            <p>{{t "about.features.repair.description"}}</p>
        </div>
        <div class="feature-card">
            <i class="fas fa-sitemap feature-icon"></i>
            <h3>{{t "about.features.schema.title"}}</h3>
            <p>{{t "about.features.schema.description"}}</p>
        </div>
        <div class="feature-card">
            <i class="fas fa-search feature-icon"></i>
            <h3>{{t "about.features.querying.title"}}</h3>
            <p>{{t "about.features.querying.description"}}</p>
        </div>
    </div>
</section>

<section class="content-section">
    <h2>{{t "about.privacy.title"}}</h2>
    <div class="privacy-info">
        <div class="privacy-point">
            <i class="fas fa-shield-alt"></i>
            <div>
                <h3>{{t "about.privacy.clientSide.title"}}</h3>
                <p>{{t "about.privacy.clientSide.description"}}</p>
            </div>
        </div>
        <div class="privacy-point">
            <i class="fas fa-bolt"></i>
            <div>
                <h3>{{t "about.privacy.fast.title"}}</h3>
                <p>{{t "about.privacy.fast.description"}}</p>
            </div>
        </div>
        <div class="privacy-point">
            <i class="fas fa-lock"></i>
            <div>
                <h3>{{t "about.privacy.noStorage.title"}}</h3>
                <p>{{t "about.privacy.noStorage.description"}}</p>
            </div>
        </div>
    </div>
</section>

<section class="content-section">
    <h2>{{t "about.whoCanUse.title"}}</h2>
    <ul class="use-cases">
        <li><strong>Developers:</strong> {{t "about.whoCanUse.developers"}}</li>
        <li><strong>Data Analysts:</strong> {{t "about.whoCanUse.analysts"}}</li>
        <li><strong>System Administrators:</strong> {{t "about.whoCanUse.sysAdmins"}}</li>
        <li><strong>Students & Educators:</strong> {{t "about.whoCanUse.students"}}</li>
        <li><strong>API Testers:</strong> {{t "about.whoCanUse.apiTesters"}}</li>
        <li><strong>DevOps Engineers:</strong> {{t "about.whoCanUse.devOps"}}</li>
    </ul>
</section>

<section class="content-section">
    <h2>{{t "about.feedback.title"}}</h2>
    <div class="github-section">
        <div class="github-info">
            <i class="fab fa-github github-icon"></i>
            <div>
                <h3>{{t "about.feedback.subtitle"}}</h3>
                <p>{{t "about.feedback.description"}}</p>
            </div>
        </div>
        <div class="contribute-actions">
            <div class="contribute-item">
                <i class="fas fa-bug"></i>
                <div>
                    <h4>{{t "about.feedback.reportBugs.title"}}</h4>
                    <p>{{t "about.feedback.reportBugs.description"}}</p>
                </div>
            </div>
            <div class="contribute-item">
                <i class="fas fa-lightbulb"></i>
                <div>
                    <h4>{{t "about.feedback.requestFeatures.title"}}</h4>
                    <p>{{t "about.feedback.requestFeatures.description"}}</p>
                </div>
            </div>
        </div>
        <div class="github-issue-link">
            <a href="https://github.com/Coder-Upsilon/json-utils/issues" target="_blank" rel="noopener noreferrer" class="github-text-link">
                <i class="fab fa-github"></i> {{t "about.feedback.submitIssue"}}
            </a>
        </div>
    </div>
</section>
