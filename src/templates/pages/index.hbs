<div class="editor-section">
    <div class="input-panel">
        <div class="panel-header">
            <div class="panel-title-group">
                <h3>{{t "editor.inputJson"}}</h3>
                <label class="parse-string-toggle">
                    <input type="checkbox" id="parseStringToggle">
                    <span class="toggle-slider"></span>
                    <span class="toggle-label">{{t "editor.parseString"}}</span>
                </label>
            </div>
            <button id="loadSampleBtn" class="btn-link">
                {{t "controls.loadSample"}}
            </button>
            <div id="inputStatus" class="status-inline"></div>
        </div>
        <div class="input-container">
            <div class="floating-buttons input-floating-buttons">
                <button id="clearBtn" class="btn-icon" title="{{t "editor.clearInput"}}">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
            <textarea id="jsonInput" placeholder="{{t "editor.placeholder"}}"></textarea>
        </div>
    </div>

    <div class="output-panel">
        <div class="panel-header">
            <div class="panel-title-group">
                <h3>{{t "editor.output"}}</h3>
                <div class="output-format-controls">
                    <label class="format-radio">
                        <input type="radio" name="outputFormat" value="pretty" checked>
                        <span>{{t "editor.pretty"}}</span>
                    </label>
                    <label class="format-radio">
                        <input type="radio" name="outputFormat" value="minify">
                        <span>{{t "editor.minify"}}</span>
                    </label>
                    <label class="format-radio">
                        <input type="radio" name="outputFormat" value="stringify">
                        <span>{{t "editor.stringify"}}</span>
                    </label>
                </div>
            </div>
            <div id="outputStatus" class="status-inline"></div>
        </div>
        <div class="output-container">
            <div class="floating-buttons">
                <button id="copyToInputBtn" class="btn-icon" title="{{t "editor.copyToInput"}}">
                    <i class="fas fa-arrow-left"></i>
                </button>
                <button id="copyBtn" class="btn-icon" title="{{t "editor.copyToClipboard"}}">
                    <i class="fas fa-copy"></i>
                </button>
                <button id="downloadBtn" class="btn-icon" title="{{t "editor.downloadFile"}}">
                    <i class="fas fa-download"></i>
                </button>
            </div>
            <textarea id="output" readonly></textarea>
        </div>
    </div>
</div>
