<!DOCTYPE html>
<html lang="{{htmlLang}}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="{{description}}">
    <meta name="keywords" content="{{keywords}}">
    <meta name="author" content="coderupsilon">
    <meta name="robots" content="index, follow">
    <meta name="language" content="{{htmlLang}}">
    
    <!-- Alternate Language Links -->
    {{#if alternateUrls}}
    <link rel="alternate" hreflang="en" href="{{alternateUrls.en}}" />
    <link rel="alternate" hreflang="zh-CN" href="{{alternateUrls.zh}}" />
    <link rel="alternate" hreflang="x-default" href="{{alternateUrls.en}}" />
    {{/if}}
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="{{title}}">
    <meta property="og:description" content="{{description}}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{canonical}}">
    <meta property="og:site_name" content="JSON Utils">
    <meta property="og:image" content="https://www.onlinejsonutils.com/assets/logo.svg">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:locale" content="{{locale}}">
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{title}}">
    <meta name="twitter:description" content="{{description}}">
    <meta name="twitter:image" content="https://www.onlinejsonutils.com/assets/logo.svg">
    <meta name="twitter:site" content="@jsonutils">
    <meta name="twitter:creator" content="@coderupsilon">
    
    <!-- Additional SEO Meta Tags -->
    <meta name="theme-color" content="#667eea">
    <meta name="msapplication-TileColor" content="#667eea">
    <meta name="application-name" content="JSON Utils">
    <meta name="apple-mobile-web-app-title" content="JSON Utils">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <link rel="canonical" href="{{canonical}}">
    
    {{#if structuredData}}
    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json">
    {{{json structuredData}}}
    </script>
    {{/if}}
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico">
    <link rel="icon" type="image/svg+xml" href="assets/favicon.svg">
    <link rel="apple-touch-icon" sizes="180x180" href="assets/favicon.svg">
    
    <!-- Resource Hints for Performance -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com">
    <link rel="dns-prefetch" href="//www.googletagmanager.com">
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
    <link rel="preconnect" href="https://www.googletagmanager.com" crossorigin>
    
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-8PBB4NZWX2"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-8PBB4NZWX2');
    </script>
    
    <!-- CodeMirror CSS is now bundled with webpack -->
    <!-- Font Awesome icons optimized - only load specific icons used -->
    
    <!-- Tailwind CSS (processed by webpack) -->
</head>
<body class="preload">
    <script>
        // Remove preload class after page load to enable transitions
        window.addEventListener('load', function() {
            document.body.classList.remove('preload');
        });
    </script>
    <div class="container">
        {{> header}}

        <main{{#if isContentPage}} class="content-page"{{/if}}>
            {{{content}}}
        </main>

        {{> footer}}
    </div>
    <script>
    // Handle share across pages toggle
    (function() {
        const toggle = document.getElementById('shareAcrossPagesToggle');
        if (toggle) {
            // Set initial state from localStorage
            try {
                const saved = localStorage.getItem('json_utils_share_across_pages');
                toggle.checked = saved === null ? true : saved === 'true';
            } catch (e) {
                toggle.checked = true;
            }
            
            // Handle toggle change
            toggle.addEventListener('change', function() {
                try {
                    localStorage.setItem('json_utils_share_across_pages', toggle.checked.toString());
                    
                    if (!toggle.checked) {
                        // Clear shared input when sync is disabled
                        localStorage.removeItem('json_utils_shared_input');
                    } else {
                        // Dispatch event to save current content when sync is enabled
                        window.dispatchEvent(new CustomEvent('syncEnabled'));
                    }
                } catch (e) {
                    console.error('Failed to save preference:', e);
                }
            });
        }
    })();
    </script>
</body>
</html>
